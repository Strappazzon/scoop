{
    "[powershell]": {
        "editor.formatOnSave": true
    },
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.fixAll.sortJSON": true
    },
    "files.exclude": {
        "**/.git": true
    },
    "json.schemas": [
        {
            "url": "https://raw.githubusercontent.com/ScoopInstaller/Scoop/master/schema.json",
            "fileMatch": [
                "bucket/*.json"
            ]
        }
    ],
    "markdownlint.config": {
        "MD033": false,
        "MD041": false
    },
    "powershell.codeFormatting.alignPropertyValuePairs": true,
    "powershell.codeFormatting.ignoreOneLineBlock": true,
    "powershell.codeFormatting.preset": "OTBS",
    "powershell.scriptAnalysis.settingsPath": "PSScriptAnalyzerSettings.psd1",
    "sort-json.settings.orderOverrideKeys": [
        "##",
        "depends",
        "suggest",
        "version",
        "description",
        "homepage",
        "license",
        "identifier",
        "url",
        "hash",
        "architecture",
        "extract_dir",
        "extract_to",
        "pre_install",
        "installer",
        "post_install",
        "env_add_path",
        "env_set",
        "bin",
        "shortcuts",
        "persist",
        "uninstaller",
        "post_uninstall",
        "checkver",
        "autoupdate",
        "notes"
    ],
    "terminal.integrated.defaultProfile.windows": "PowerShell"
}
