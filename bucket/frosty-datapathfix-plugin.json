    "pre_install": [
        "$frosty_folder = Split-Path \"${env:USERPROFILE}\\scoop\\apps\\frosty-modmanager\\current\\FrostyModManager.exe\"",
        "If (!(Test-Path $frosty_folder)) { error 'Could not find Frosty Mod Manager. Aborting installation.'; break }",
        "Copy-Item \"$dir\\DatapathFix.exe\" \"$frosty_folder\\Plugins\\\" -Force",
        "Copy-Item \"$dir\\DatapathFixPlugin.dll\" \"$frosty_folder\\Plugins\\\" -Force"
    ],
    "post_uninstall": [
        "$frosty_folder = Split-Path \"${env:USERPROFILE}\\scoop\\apps\\frosty-modmanager\\current\\FrostyModManager.exe\"",
        "If (!(Test-Path $frosty_folder)) { error 'Could not find Frosty Mod Manager.'; break }",
        "Remove-Item \"$frosty_folder\\Plugins\\DatapathFix.exe\" -ErrorAction SilentlyContinue -Force",
        "Remove-Item \"$frosty_folder\\Plugins\\DatapathFixPlugin.dll\" -ErrorAction SilentlyContinue -Force"
    ],
    "checkver": {
        "github": "https://github.com/Dyvinia/DatapathFixPlugin"
    },
    "autoupdate": {
        "url": "https://github.com/Dyvinia/DatapathFixPlugin/releases/download/v$version/DatapathFixPlugin.zip"
    }
